VAR1				DCD		17
VAR2				DCD		4
OP				  DCD		2   ;0 SOMMA, 1 SOTTRAZIONE, 2 MOLTIPLICAZIONE, 3 DIVISONE
RESULT			FILL		4
				
				;CALCOLATRICE	IN ASSEMBLY
				
				MOV		R0, #VAR1
				LDR		R0, [R0]
				MOV		R1, #VAR2
				LDR		R1, [R1]
				MOV		R2, #OP
				LDR		R2, [R2]
				
				
				CMP		  R2, #0	;CONFRONTO PER LA SOMMA
				BLEQ		SOMMA
				
				
				CMP		  R2, #1   ;CONFRONTO PER LA SOTTRAZIONE
				BLEQ		SOTTRAZIONE
				
				
				CMP		R2, #2  ;CONFRONTO PER LA MOLTIPLICAZIONE
				BLEQ		MOLTIPLICAZIONE
				
				
				CMP		R1, #0 ;NON FACCIO ESEGUIRE LA DIVISIONE PER ZERO
				BEQ		FINE
				MOV		R3, #0  ;INIZIALIZZAZIONE REGISTRO NUMERO 3 PER LA DIVIIONR
				CMP		R2, #3  ;CONFRONTO PER LA DIVISIONE
				BLEQ		DIVISIONE
				
				
				B		FINE
				
				
				
SOMMA			ADD		R5, R0, R1
				  MOV		R4, #RESULT
				  STR		R5, [R4]
				  MOV		PC, LR
				
				
				
SOTTRAZIONE		SUB		R6, R0, R1
				MOV		R4, #RESULT
				STR		R6, [R4]
				MOV		PC, LR
				
MOLTIPLICAZIONE
				MOV		R3, #0
				
MOL			ADD		R3, R3, R0
				SUB		R1, R1, #1
				CMP		R1, #0
				BNE		MOL
				MOV		R4, #RESULT
				STR		R3, [R4]
				MOV		PC, LR
				
DIVISIONE			SUB		R0, R0, R1
				ADD		R3, R3, #1
				CMP		R0, #0
				BGT		DIVISIONE
				CMP		R0, #0
				BEQ		SALTO         ;SALTO QUANDO IL NUMERO E' PERFETTAMENTE DIVISIBILE
				SUB		R3, R3, #1    ;HO DECREMENTATO IL CONTATORE PERCHE' ESEGUIVA UN INCREMENTO DI TROPPO PRIMA DI USCIRE
SALTO		MOV		R4, #RESULT
				STR		R3, [R4]
				MOV		PC, LR
				
				
				
FINE	
